ptal_data <- bind_rows(lapply(names(ptal_data_list), function(name) {year <- as.integer(gsub("ptal_|_points|_grid", "", name))
    ptal_data_list[[name]] %>%
      mutate(year = year) %>%
      dplyr::select(LSOA11CD, PTAL_Value, PTAL_Category, year)}))
